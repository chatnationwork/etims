# ===========================================
# Environment Variables Template (Production)
# ===========================================
# Copy this file to .env.production and fill in the values
# cp env.example .env.production

# ===========================================
# Server Configuration
# ===========================================

# External port to expose the application on (default: 3000)
HOST_PORT=3000

# ===========================================
# WhatsApp Business API Configuration
# ===========================================

# WhatsApp Business API Phone Number ID (from Meta Business Suite)
WHATSAPP_PHONE_NUMBER_ID="your_phone_number_id_here"

# WhatsApp Business API Access Token (System User token with messaging permissions)
WHATSAPP_ACCESS_TOKEN="your_whatsapp_access_token_here"

# WhatsApp display number (no + sign, e.g., 254708427694)
NEXT_PUBLIC_WHATSAPP_NUMBER="2547XXXXXXXX"

# ===========================================
# API Configuration
# ===========================================

# Upstream API Base URL
# Test:       https://kratest.pesaflow.com/api/ussd
# Production: https://ecitizen.kra.go.ke/api/ussd
NEXT_PUBLIC_API_BASE_URL="https://ecitizen.kra.go.ke/api/ussd"
